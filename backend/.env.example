# Environment
ENVIRONMENT=development

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Model Paths
EMOTION_MODEL_PATH=../models/emotion/weights
KNOWLEDGE_MODEL_PATH=../models/knowledge/weights

# LLM API Keys (if using API-based models)
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Firebase
FIREBASE_CREDENTIALS_PATH=../database/firebase/config.json

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Feature Flags
ENABLE_EMOTION_DETECTION=true
ENABLE_KNOWLEDGE_REASONING=true
USE_LOCAL_LLM=true

# Logging
LOG_LEVEL=INFO
